{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,

      "rootDir": "src",
      "outDir": "dist",

      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,

      "noEmitOnError": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
